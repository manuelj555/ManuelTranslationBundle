{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme form.existent_domains 'bootstrap_3_layout.html.twig' %}
{% trans_default_domain "ManuelTranslationBundle" %}

<div class="modal fade" id="translation-form-modal">
    <div class="modal-dialog {#modal-lg#}">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'label.translation_form'|trans }}</h4>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <div id="form-errors"></div>
                {{ form_row(form.code, { attr: { class: "disable-edit" }}) }}
                <div class="form-group">
                    <div class="col-sm-2">{{ form_label(form.domain) }}</div>
                    <div class="col-sm-10">
                        {{ form_widget(form.domain, { attr: { class: "disable-edit" }}) }}
                        <div class="form-inline existen-domains">
                            {% for item in form.existent_domains %}
                                {{ form_widget(item, {attr: { class: "disable-edit" }}) }}
                                &nbsp;&nbsp;&nbsp;&nbsp;
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% for locale, child in form.values %}
                    {{ form_row(child, {label:locale|title}) }}
                {% endfor %}
                {{ form_rest(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">{{ 'label.close'|trans }}</button>
                <button type="submit" class="btn btn-primary">{{ 'label.save_changes'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->