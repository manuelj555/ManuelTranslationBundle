{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme form.existent_domains 'bootstrap_3_layout.html.twig' %}
{% trans_default_domain "ManuelTranslationBundle" %}

{{ form_start(form) }}
<div class="form-content">
    {{ form_errors(form) }}
    {{ form_row(form.code, { attr: { class: "disable-edit" }}) }}
    <div class="form-group">
        <div class="col-sm-2">{{ form_label(form.domain) }}</div>
        <div class="col-sm-10">
            {{ form_widget(form.domain, { attr: { class: "disable-edit" }}) }}
            <div class="form-inline existen-domains">
                {% for item in form.existent_domains %}
                    {{ form_widget(item, {attr: { class: "disable-edit" }}) }}
                    &nbsp;&nbsp;&nbsp;&nbsp;
                {% endfor %}
            </div>
        </div>
    </div>
    {% for locale, child in form.values %}
        {{ form_row(child, {label:locale|title}) }}
    {% endfor %}
    {{ form_rest(form) }}
</div>
<button type="button" class="btn btn-default"
        data-dismiss="modal">{{ 'label.close'|trans }}</button>
<button type="submit" class="btn btn-primary">{{ 'label.save_changes'|trans }}</button>
{{ form_end(form) }}